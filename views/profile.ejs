<!DOCTYPE html>
<html>
    <head>
        <style>
            body{background: skyblue; font-family: Verdana; color: #fff; padding: 30px;}
            h1{font-size: 48px; text-align: center;}
            h2{font-size: 38px; text-align: center;}
            p , li {font-size: 16px; text-align: center;}
        </style>
    </head>
    <body>
        <%- include ('partials/nav.ejs') %>
        <h1><%= person%></h1>
        <p><strong>Age : <%= data.age %></strong></p>
        <p><strong>Job : <%= data.job %></strong></p>
        <h2>Hobbies</h2>
        <ul>
            <% data.hobbies.forEach(function(item){ %>
            <li><%= item %></li>
            <% }); %>
        </ul>
    </body>
</html>